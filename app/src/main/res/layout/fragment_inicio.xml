<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="865dp"
        android:layout_height="1168dp"
        app:srcCompat="@drawable/epi_"
        tools:layout_editor_absoluteX="-217dp"
        tools:layout_editor_absoluteY="-143dp" />

    <View
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:background="?attr/colorPrimary"
        android:backgroundTint="@color/orange"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:strokeColor="@color/material_dynamic_neutral_variant90"
        app:strokeWidth="5dp"
        android:layout_margin="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Bem-Vindo"
                android:textSize="30dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="102dp"
                tools:layout_editor_absoluteY="88dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange"
                android:fontFamily="serif"
                android:text="Funcionario"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="33dp"
                tools:layout_editor_absoluteY="228dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange"
                android:fontFamily="serif"
                android:text="Gestor"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="226dp"
                tools:layout_editor_absoluteY="228dp" />

            <TextView
                android:id="@+id/tvSelect"
                android:layout_width="305dp"
                android:layout_height="58dp"
                android:fontFamily="serif"
                android:text="Porfavor selecione de qual grupo você faz parte?"
                android:textAlignment="center"
                android:textSize="19dp"
                tools:layout_editor_absoluteX="33dp"
                tools:layout_editor_absoluteY="144dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="190dp"
                android:layout_height="36dp"
                android:fontFamily="serif"
                android:text="Não faz parte de nenhum? Conheça nosso objetivo."
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="italic"
                tools:layout_editor_absoluteX="90dp"
                tools:layout_editor_absoluteY="309dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>